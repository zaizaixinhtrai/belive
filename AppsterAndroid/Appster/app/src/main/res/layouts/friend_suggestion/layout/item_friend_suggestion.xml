<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingBottom="5dp"
              android:paddingLeft="20dp"
              android:paddingRight="16dp"
              android:paddingTop="5dp"
              android:background="?android:attr/selectableItemBackground"
    >

    <com.appster.customview.CircleImageView
        android:id="@+id/ivUserImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <com.appster.customview.CustomFontTextView
            android:id="@+id/tvDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Appsters"
            android:textDirection="locale"
            android:textColor="@color/color_000000"
            android:textSize="13sp"
            app:appFont="@string/font_helveticaneuelight" />

        <com.appster.customview.CustomFontTextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textDirection="locale"
            android:text="\@Appstersgfgfgfgff"
            android:textColor="@color/color_bbbbbb"
            app:appFont="@string/font_HelveticaNeueRegular"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnFollow"
        style="@style/clickable_ripple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/suggested_follow"
        android:gravity="center"
        android:padding="4dp"/>
</LinearLayout>