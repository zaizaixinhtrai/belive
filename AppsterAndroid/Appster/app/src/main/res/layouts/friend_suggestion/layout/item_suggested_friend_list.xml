<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:clipToPadding="false"
    android:orientation="vertical">

    <com.appster.layout.SquareImageView
        android:id="@+id/userImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/user_image_default" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.appster.customview.CustomFontTextView
                android:id="@+id/tvDisplayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|left"
                android:includeFontPadding="true"
                android:maxWidth="100dp"
                android:singleLine="true"
                android:text="Mongabong"
                android:textColor="@color/color_000000"
                android:textDirection="locale"
                android:textSize="14sp"
                app:appFont="@string/font_helveticaneuelight"
                tools:text="Mongabong" />

            <com.appster.customview.CustomFontTextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|left"
                android:includeFontPadding="true"
                android:maxWidth="100dp"
                android:singleLine="true"
                android:text="\@mongabong"
                android:textColor="@color/color_bbbbbb"
                android:textDirection="locale"
                android:textSize="10sp"
                app:appFont="@string/font_helveticaneuelight" />
        </LinearLayout>

        <Button
            android:id="@+id/btnFollow"
            android:layout_width="33dp"
            android:layout_height="22dp"
            android:layout_gravity="end"
            android:background="@drawable/suggested_following" />
    </FrameLayout>

    <com.appster.customview.CustomFontTextView
        android:id="@+id/tvHashtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="#Travel #Beauty"
        android:textDirection="locale"
        android:textSize="10sp"
        android:visibility="gone"
        app:appFont="@string/font_helveticaneuelight"
        tools:text="#Travel #Beauty" />

</LinearLayout>