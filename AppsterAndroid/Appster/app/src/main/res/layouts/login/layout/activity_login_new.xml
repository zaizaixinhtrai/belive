<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.appster.customview.VideoViewMoreScreenLogin
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_black75_gradient_login"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:src="@drawable/topbar_belive_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_facebook_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/red_button_ripple"
                android:src="@drawable/ic_login_facebook" />

            <ImageButton
                android:id="@+id/btn_google_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/login_options_margin"
                style="@style/red_button_ripple"
                android:src="@drawable/ic_login_google" />
            <ImageButton
                android:id="@+id/btn_phone_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/login_options_margin"
                style="@style/red_button_ripple"
                android:src="@drawable/ic_phone_login" />

            <ImageButton
                android:id="@+id/btn_twitter_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/login_options_margin"
                style="@style/red_button_ripple"
                android:src="@drawable/ic_login_twitter" />

            <ImageButton
                android:id="@+id/btn_instagram_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/login_options_margin"
                style="@style/red_button_ripple"
                android:src="@drawable/ic_login_instagram" />
            <!--android:layout_marginStart="32dp"-->


    </LinearLayout>

    <com.appster.customview.CustomFontTextView
        android:id="@+id/ll_sign_late"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/login_Sign_in_later"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="invisible"
        app:appFont="@string/font_opensansbold" />

    <com.appster.customview.CustomFontTextView
        android:id="@+id/tv_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:textColor="#bbbbbb"
        android:textSize="11sp"
        android:textStyle="normal"
        app:appFont="@string/font_opensansregular" />
</LinearLayout>
</RelativeLayout>