    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCreateProfile"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        style="@style/Base.Widget.AppCompat.Button.Borderless.BottomButton"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="@string/register_begin"
        android:textSize="18sp"
        app:appFont="@string/font_opensansbold"
        tools:background="@drawable/selector_red_button_no_radius"/>

