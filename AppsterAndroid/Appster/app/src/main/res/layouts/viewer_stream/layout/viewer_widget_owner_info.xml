<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="38dp"
     android:layout_marginStart="6dp"
    android:orientation="horizontal">

    <View
        android:id="@+id/v_live_streamer_bg"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:minWidth="100dp"
        android:gravity="center_vertical"
        android:background="@drawable/black_boder_view_bg"
        tools:layout_width="130dp"/>

    <LinearLayout
        android:id="@+id/llLiveVideoOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:animateLayoutChanges="true">

        <com.appster.customview.CircleImageView
            android:id="@+id/ciOwnerUserImage"
            android:layout_marginStart="@dimen/live_top_panel_bg_margin"
            android:layout_width="32dp"
            android:layout_height="32dp"
            tools:src="@drawable/user_image_default" />

        <LinearLayout
            android:id="@+id/ll_time_love_views"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/live_love_views_container_margin_end">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <wowza.gocoder.sdk.app.ui.TimerView
                    android:id="@+id/txtTimer"
                    style="@style/widget_owner_info_textstyle"
                    android:textSize="12sp"
                    android:visibility="visible"
                    app:appFont="@string/font_opensansemibold"
                    tools:text="00:00:00" />

                <com.appster.customview.CustomFontTextView
                    android:id="@+id/tvLiveOwnerUserName"
                    style="@style/widget_owner_info_textstyle"
                    android:textSize="11sp"
                    android:visibility="gone"
                    app:appFont="@string/font_opensansemibold"
                    tools:text="thanhbc" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.appster.customview.CustomFontTextView
                    android:id="@+id/tvCurrentView"
                    style="@style/widget_owner_info_stats_textstyle"
                    android:drawableEnd="@drawable/ic_view_stats_small"
                    android:text="0"
                    app:appFont="@string/font_opensansemibold"

                    />

                <com.appster.customview.CustomFontTextView
                    android:id="@+id/tvTotalLiked"
                    style="@style/widget_owner_info_stats_textstyle"
                    android:drawableEnd="@drawable/ic_like_stats_small"
                    android:text="0"
                    app:appFont="@string/font_opensansemibold" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/iBtnHostFollow"
            android:layout_width="@dimen/live_host_follow_button_size"
            android:layout_height="@dimen/live_host_follow_button_size"
            style="@style/clickable_ripple"
            android:scaleType="center"
            android:src="@drawable/ic_live_host_follow"
            android:visibility="gone"
            tools:visibility="visible"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hlvCustomList"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/live_stream_horizontal_listview"
            android:layout_gravity="center"
            android:layout_marginEnd="28dp"
            android:layout_marginStart="6dp"
            android:overScrollMode="never"
            />
    </LinearLayout>
</FrameLayout>


