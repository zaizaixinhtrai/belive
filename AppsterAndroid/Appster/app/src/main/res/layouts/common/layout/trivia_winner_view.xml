<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.appster.customview.CustomFontTextView
        android:id="@+id/tvNumWinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="77dp"
        android:background="@drawable/bg_trivia_winner_text"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:appFont="@string/font_ralewaybold"
        tools:text="23 Winners!" />

    <!--<android.support.constraint.ConstraintLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <com.appster.customview.CustomFontTextView
        android:id="@+id/tvCongratsText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingBottom="9dp"
        android:paddingTop="15dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:appFont="@string/font_ralewaybold"
        tools:text="Each winner gets:" />

    <com.appster.customview.CustomFontTextView
        android:id="@+id/tvPrizeAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:includeFontPadding="false"
        android:textColor="@color/color_ffe548"
        android:textSize="30sp"
        app:appFont="@string/font_helveticaneuebold"
        tools:text="S$ 217.39" />
    <!--</android.support.constraint.ConstraintLayout>-->
    <com.appster.core.adapter.recyclerview.LoadMoreRecyclerView
        android:id="@+id/rcvWinnerList"
        style="@style/triviaWinnerScrollBarStyle"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        android:paddingStart="30dp"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/trivia_winner_item" />
</LinearLayout>