<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:padding="3dp"
        android:background="@drawable/trivia_dialog_border_view_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ibClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_trivia_dialog_close"/>

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:scrollbarThumbVertical="@drawable/trivia_scrollbar_thumb"
            android:scrollbarTrackVertical="@drawable/trivia_scrollbar_track"
            android:scrollbarSize="4dp"
            />

    </LinearLayout>
</FrameLayout>