<?xml version="1.0" encoding="utf-8"?>
<com.appster.customview.SquaredFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:gravity="center">
    <com.appster.customview.luckywheel.LuckyWheelView
        app:lkwBackgroundColor="@color/transparent"
        app:lkwTextColor="#263238"
        app:lkwCenterImage="@drawable/wheel2"
        app:lkwCursor="@drawable/ic_spin_cursor"
        android:id="@+id/luckyWheel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wheelbody_bg"
        />

    <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_spin_button"
        android:id="@+id/playLucky"
        android:background="@color/transparent"
        android:layout_gravity="center"
        android:contentDescription="@null"/>
</com.appster.customview.SquaredFrameLayout>