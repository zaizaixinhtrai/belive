<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="2dp"
       android:background="@drawable/bg_gift_compound_view"
       android:clipChildren="false"
       android:gravity="center_vertical"
       android:orientation="horizontal"
       tools:parentTag="LinearLayout">

    <com.appster.customview.CircleImageView
        android:id="@+id/img_avatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/user_image_default"/>

    <TextView
        android:id="@+id/txt_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="display name"
        android:textColor="#fff"
        android:textDirection="locale"/>

    <ImageView
        android:id="@+id/img_gift_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="16dp"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/txt_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f00"
        android:textSize="26sp"/>
</LinearLayout>