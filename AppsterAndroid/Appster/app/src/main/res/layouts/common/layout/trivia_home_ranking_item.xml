<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="17dp"
    android:paddingEnd="34dp"
    android:paddingStart="34dp">

    <com.appster.customview.CircleImageView
        android:id="@+id/ivUserImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <com.appster.customview.CustomFontTextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textDirection="locale"
            android:textSize="18sp"
            app:appFont="@string/font_questrialregular"
            tools:text="\@Appstersgfgfgfgff" />
    </LinearLayout>

    <com.appster.customview.CustomFontTextView
        android:id="@+id/tvAmount"
        android:layout_width="85dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_top_ranking_amount"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textDirection="locale"
        android:textSize="12sp"
        android:visibility="visible"
        app:appFont="@string/font_questrialregular"
        app:autoSizeMaxTextSize="13sp"
        app:autoSizeMinTextSize="11sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        tools:text="$ 10000231.31" />
</LinearLayout>