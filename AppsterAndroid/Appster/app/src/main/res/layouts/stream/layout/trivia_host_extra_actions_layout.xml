<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clTriviaExtraActionsContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/trivia_padding"
    android:paddingStart="@dimen/trivia_padding"
    android:clipToPadding="false"
    android:animateLayoutChanges="true"
    android:visibility="gone"
    android:paddingTop="10dp">

    <ImageButton
        android:id="@+id/btnTriviaTopWinner"
        style="@style/clickable_ripple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_trivia_trophy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"/>

    <ImageButton
        android:id="@+id/btnTriviaHowToPlay"
        style="@style/clickable_ripple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_live_title"
        android:layout_marginTop="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_trivia_how_to_play"
        app:layout_constraintEnd_toEndOf="@+id/btnTriviaTopWinner"
        app:layout_constraintStart_toStartOf="@+id/btnTriviaTopWinner"
        app:layout_constraintTop_toBottomOf="@+id/btnTriviaTopWinner"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>