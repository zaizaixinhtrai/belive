<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/end_stream_user_image_capacity">

    <!--<ImageView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:alpha="0.3"-->
    <!--android:scaleType="fitXY"-->
    <!--android:src="@drawable/user_image_default" />-->

    <ImageView
        android:id="@+id/end_user_image"
        android:layout_width="match_parent"
        android:alpha="0.03"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp"
        android:visibility="visible">

        <com.appster.customview.CustomFontTextView
            android:id="@+id/title_ended_stream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5.0dip"
            android:letterSpacing="0.09"
            android:text="@string/live_stream_ended"
            android:textAllCaps="true"
            android:textColor="#58585B"
            android:textSize="19sp"
            android:textStyle="bold"
            app:appFont="@string/font_opensansbold" />

        <com.appster.customview.CustomFontTextView
            android:id="@+id/duration_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-2dp"
            android:gravity="center"
            android:letterSpacing="0.09"
            android:text="00:00:00"
            android:textColor="#58585B"
            android:textSize="14sp"
            android:textStyle="bold"
            app:appFont="@string/font_opensansemibold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/white" />

        <!--<FrameLayout-->
        <!--android:layout_width="180dp"-->
        <!--android:layout_height="180dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginTop="15dp"-->
        <!--android:background="@drawable/end_result_gradient"-->
        <!--android:padding="14dp">-->

        <!--<com.appster.customview.CircleImageView-->
        <!--android:id="@+id/userImage"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="center"-->
        <!--android:src="@drawable/user_image_default" />-->
        <!--</FrameLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.appster.customview.CustomFontTextView
                        android:id="@+id/score_on_stream_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="#58585b"
                        android:textSize="@dimen/text_size_like_count_ended_stream"
                        android:textStyle="bold"
                        app:appFont="@string/font_opensansbold" />

                    <!--<com.appster.customview.CustomFontTextView-->
                    <!--android:id="@+id/thou_score"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="@string/stream_end_stream_thousand"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:textSize="22sp"-->
                    <!--android:textStyle="normal"-->
                    <!--android:visibility="gone"-->
                    <!--app:appFont="@string/font_opensansbold" />-->
                </LinearLayout>

                <com.appster.customview.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stream_end_stream_viewer_count"
                    android:textColor="#9c9c9c"
                    android:textSize="@dimen/text_size_count_ended_stream"
                    android:textStyle="bold"
                    app:appFont="@string/font_opensanssemibold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <com.appster.customview.CustomFontTextView
                        android:id="@+id/like_received_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="#58585b"
                        android:textSize="@dimen/text_size_like_count_ended_stream"
                        android:textStyle="bold"
                        app:appFont="@string/font_opensansbold" />

                    <!--<com.appster.customview.CustomFontTextView-->
                    <!--android:id="@+id/thou_like"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="@string/stream_end_stream_thousand"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:textSize="22sp"-->
                    <!--android:textStyle="normal"-->
                    <!--android:visibility="gone"-->
                    <!--app:appFont="@string/font_opensansbold" />-->
                </LinearLayout>

                <com.appster.customview.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stream_end_stream_likes_count"
                    android:textColor="#9c9c9c"
                    android:textSize="@dimen/text_size_count_ended_stream"
                    android:textStyle="bold"
                    app:appFont="@string/font_opensanssemibold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <com.appster.customview.CustomFontTextView
                        android:id="@+id/gift_received_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="#58585b"
                        android:textSize="@dimen/text_size_like_count_ended_stream"
                        android:textStyle="bold"
                        app:appFont="@string/font_opensansbold" />

                    <!--<com.appster.customview.CustomFontTextView-->
                    <!--android:id="@+id/thou_gift"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="@string/stream_end_stream_thousand"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:textSize="22sp"-->
                    <!--android:textStyle="normal"-->
                    <!--android:visibility="gone"-->
                    <!--app:appFont="@string/font_opensansbold" />-->
                </LinearLayout>

                <com.appster.customview.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stream_end_stream_stars_count"
                    android:textColor="#9c9c9c"
                    android:textSize="@dimen/text_size_count_ended_stream"
                    android:textStyle="bold"
                    app:appFont="@string/font_opensanssemibold" />
            </LinearLayout>
        </LinearLayout>

        <com.appster.customview.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="47dp"
            android:text="@string/stream_end_share_achievements"
            android:textColor="#6b6c6e"
            android:textSize="13sp"
            app:appFont="@string/font_opensanssemibold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/end_im_facebook"
                android:layout_width="@dimen/height_btn_share_end_stream"
                android:layout_height="@dimen/height_btn_share_end_stream"
                android:background="@drawable/icon_share_facebook" />

            <ImageView
                android:id="@+id/end_im_instagram"
                android:layout_width="@dimen/height_btn_share_end_stream"
                android:layout_height="@dimen/height_btn_share_end_stream"
                android:layout_marginLeft="17dp"
                android:background="@drawable/icon_share_intagram" />

            <ImageView
                android:id="@+id/end_im_whatsapp"
                android:layout_width="@dimen/height_btn_share_end_stream"
                android:layout_height="@dimen/height_btn_share_end_stream"
                android:layout_marginLeft="17dp"
                android:background="@drawable/icon_share_whatsapp" />

            <ImageView
                android:id="@+id/end_im_twitter"
                android:layout_width="@dimen/height_btn_share_end_stream"
                android:layout_height="@dimen/height_btn_share_end_stream"
                android:layout_marginLeft="17dp"
                android:background="@drawable/icon_share_twitter" />

            <ImageView
                android:id="@+id/end_im_wechat"
                android:layout_width="@dimen/height_btn_share_end_stream"
                android:layout_height="@dimen/height_btn_share_end_stream"
                android:background="@drawable/icon_share_wechat" />

            <ImageView
                android:id="@+id/end_im_weibo"
                android:layout_width="@dimen/height_btn_share_end_stream"
                android:layout_height="@dimen/height_btn_share_end_stream"
                android:layout_marginLeft="17dp"
                android:background="@drawable/icon_share_weibo" />

            <ImageView
                android:id="@+id/end_im_email"
                android:layout_width="@dimen/height_btn_share_end_stream"
                android:layout_height="@dimen/height_btn_share_end_stream"
                android:layout_marginLeft="17dp"
                android:background="@drawable/icon_share_email" />

            <ImageView
                android:id="@+id/end_im_others"
                android:layout_width="@dimen/height_btn_share_end_stream"
                android:layout_height="@dimen/height_btn_share_end_stream"
                android:layout_marginLeft="17dp"
                android:background="@drawable/icon_share_others" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="28dp"
            android:layout_marginTop="28dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/txt_post_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            tools:text="@string/record_instruction_below_one_minute" />

        <com.appster.customview.CustomFontButton
            android:id="@+id/go_profile"
            style="@style/Base.Widget.AppCompat.Button.Borderless.BeLive"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/ended_stream_hot_delete_button"
            android:letterSpacing="0.09"
            android:text="@string/stream_end_stream_profile_btn"
            tools:targetApi="lollipop" />

        <com.appster.customview.CustomFontButton
            android:id="@+id/go_back_stream_end"
            style="@style/Base.Widget.AppCompat.Button.Borderless.BeLive"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ended_stream_hot_delete_button"
            android:text="@string/stream_end_stream_home_btn"
            android:textColor="@color/white" />

    </LinearLayout>
</FrameLayout>
