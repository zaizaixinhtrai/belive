<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:animateLayoutChanges="true"
             android:orientation="vertical"
             tools:background="@color/background_dim_stream">

    <com.appster.layout.SquareImageView
        android:id="@+id/img_sticker_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="90dp"
        android:layout_marginBottom="6dp"
        android:background="@android:color/transparent"
        android:paddingBottom="10dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="16dp"
        android:scaleType="centerInside"/>

    <com.appster.layout.SquareImageView
        android:id="@+id/ivDownloadIndicator"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/indicator_download"
        android:visibility="gone"/>

    <com.appster.customview.CustomFontTextView
        android:id="@+id/txt_coming_soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Coming\nSoon"
        android:textColor="@color/face_unity_coming_soon"
        app:appFont="@string/font_HelveticaNeueRegular"/>

</FrameLayout>