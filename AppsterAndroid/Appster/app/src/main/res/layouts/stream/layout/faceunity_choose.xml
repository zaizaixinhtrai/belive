<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/faceunity_beauty_grind"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:visibility="invisible"
        android:gravity="center">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="磨皮"
            android:textColor="@color/font_color_35"
            android:textSize="14sp"/>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/faceunity_grind_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/faceunity_beauty_whiten"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:visibility="invisible"
        android:gravity="center">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="美白"
            android:textColor="@color/font_color_35"
            android:textSize="14sp"/>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/faceunity_whiten_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/faceunity_beauty_cheek"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:visibility="invisible"
        android:gravity="center">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="瘦脸"
            android:textColor="@color/font_color_35"
            android:textSize="14sp"/>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/faceunity_cheek_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/faceunity_beauty_eye"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:visibility="invisible"
        android:gravity="center">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="大眼"
            android:textColor="@color/font_color_35"
            android:textSize="14sp"/>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/faceunity_eye_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/faceunity_prop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="#11123456"
            android:text="Face"
            android:textColor="@color/font_color_35"
            android:textSize="@dimen/font_size_28px">
        </CheckBox>

        <CheckBox
            android:id="@+id/faceunity_gesture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="#11123456"
            android:text="Gesture"
            android:textColor="@color/font_color_35"
            android:textSize="@dimen/font_size_28px">
        </CheckBox>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="Beauty:"
            android:textColor="@color/font_color_35"
            android:textSize="16sp"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/faceunity_beauty"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:text="none"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>