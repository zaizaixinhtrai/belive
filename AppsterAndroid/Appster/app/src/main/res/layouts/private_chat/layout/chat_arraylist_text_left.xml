<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="18dp"
              android:layout_marginBottom="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvChatDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:inputType="textMultiLine"
            android:maxLength="125"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp"
            android:text="Monday 12/06/2015"
            android:textColor="#000000"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <com.appster.circularimageview.CircularImageView
                android:id="@+id/chat_user_image"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:contentDescription="@string/content_desc"
                android:padding="2.5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="11dp"
            android:paddingEnd="0dp"
            android:background="@drawable/chat_left_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/receivertextt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_5c5c5c"
                android:textSize="15sp"
                tools:text="Far far away, behind the world mountains, far from countries Vokalia and Consonantia"/>

            <ImageView
                android:id="@+id/imv_send"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:visibility="gone"
                tools:visibility="visible"/>
            <com.appster.customview.CustomFontTextView
                android:id="@+id/date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:paddingTop="3dp"
                android:maxLength="125"

                android:textColor="@color/color_dfdfdf"
                android:textSize="13sp"
                tools:text="10:30AM"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>