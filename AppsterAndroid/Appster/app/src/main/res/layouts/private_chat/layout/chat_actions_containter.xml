<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llPrivateChatBottomContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:gravity="center|bottom"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    tools:showIn="@layout/message_dialog_chat">

    <ImageButton
        android:id="@+id/flChatAttachment"
        style="@style/clickable_ripple"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_gravity="center|bottom"
        android:minWidth="50dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_chat_attachment" />

    <com.appster.customview.CustomFontEditText
        android:id="@+id/etInputMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/background_input_comment"
        android:ems="10"
        android:gravity="center|start"
        android:hint="@string/write_a_message"
        android:maxLines="6"
        android:minHeight="46dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:textColor="@color/color_5c5c5c"
        android:textColorHint="@color/color_d8d8d8"
        android:textSize="13sp"
        android:windowSoftInputMode="adjustPan|adjustResize"
        app:appFont="@string/font_opensansemibold">

        <requestFocus />
    </com.appster.customview.CustomFontEditText>

    <ImageButton
        android:id="@+id/flChatSendMessage"
        style="@style/clickable_ripple"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_gravity="center|bottom"
        android:minWidth="72dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_chat_arrow" />

</LinearLayout>
