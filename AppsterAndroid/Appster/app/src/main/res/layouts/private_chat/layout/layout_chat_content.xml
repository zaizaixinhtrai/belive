<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llChatScreenContainer"
    style="?attr/themedKeyboardAvailableScreenStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

        <com.appster.customview.CustomFontTextView
            android:id="@+id/tv_empty_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:text="@string/chat_empty_holder_message"
            android:textAlignment="center"
            android:textColor="@color/color_6b6c6e"
            android:textSize="13sp"
            android:visibility="gone"
            app:appFont="@string/font_opensansemibold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_you_are_blocked"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/background_dim_stream"
        android:gravity="center"
        android:text="@string/member_doesnot_want_to_receive_message"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:visibility="visible" />

    <include layout="@layout/chat_actions_containter" />

</LinearLayout>
