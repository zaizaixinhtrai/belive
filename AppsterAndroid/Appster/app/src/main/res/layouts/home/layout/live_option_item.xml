<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/live_show_option_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/optionPaddingHaft"
    android:layout_marginEnd="@dimen/optionPaddingHaft">

    <ImageView
        android:id="@+id/ivOption"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/live_show_option_height"/>

    <com.appster.customview.CustomFontTextView
        android:id="@+id/tvOptionValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:appFont="@string/font_questrialregular"
        android:layout_gravity="center"/>
</FrameLayout>