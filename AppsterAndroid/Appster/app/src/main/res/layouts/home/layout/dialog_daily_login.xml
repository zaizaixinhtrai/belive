<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imBackground"
        android:layout_width="300dp"
        android:layout_height="550dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:src="@drawable/daily_login_day_1" />

    <FrameLayout
        android:id="@+id/fmCloseMachine"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/imBackground"
        app:layout_constraintTop_toTopOf="@+id/imBackground">

        <ImageView
            android:id="@+id/ivCloseMachine"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="top|end"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="7dp"
            android:contentDescription="@null"
            android:src="@drawable/daily_close_button" />
    </FrameLayout>

    <com.appster.customview.CustomFontButton
        android:id="@+id/btCollect"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/daily_treat_claim_button"
        android:letterSpacing="0.285"
        android:text="@string/claim_button"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:appFont="@string/font_opensansbold"
        app:layout_constraintBottom_toBottomOf="@+id/imBackground"
        app:layout_constraintLeft_toLeftOf="@+id/imBackground"
        app:layout_constraintRight_toRightOf="@+id/imBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>