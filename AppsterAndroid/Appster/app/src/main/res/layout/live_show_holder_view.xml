<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="7dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp">

    <FrameLayout
        android:id="@+id/fm_banner"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="@drawable/live_show_fashion"
        android:padding="1dp">

        <RelativeLayout
            android:id="@+id/ll_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/live_show_banner_sports"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/txt_live"
                    android:layout_width="@dimen/home_live_show_width_sport_btn"
                    android:layout_height="@dimen/home_live_show_height_sport_btn"
                    android:background="@drawable/background_button_live_transparent"
                    android:gravity="center"
                    android:text="Live"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/home_live_show_text_sport_btn" />

                <TextView
                    android:id="@+id/txt_type_live"
                    android:layout_width="@dimen/home_live_show_width_sport_btn"
                    android:layout_height="@dimen/home_live_show_height_sport_btn"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:background="@drawable/live_show_holder_sport"
                    android:gravity="center"
                    android:text="Sports"
                    android:textColor="@color/live_show_sports"
                    android:textSize="@dimen/home_live_show_text_sport_btn" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:shadowColor="#ff6cc450"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="20"
                android:text="12-14 pm"
                android:textColor="@color/grey_text_color"
                android:textSize="20sp" />

        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/margin_top_newsfeed"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_like_count"
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:background="@drawable/icon_viewers"
            android:contentDescription="@string/content_desc"
            android:scaleType="center" />

        <com.appster.customview.CustomFontTextView
            android:id="@+id/viewer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/text_newsfeed_color"
            app:appFont="@string/font_helveticaneuebold" />

        <com.appster.customview.CustomFontTextView
            android:id="@+id/viewers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:text="@string/number_view"
            android:textColor="@color/text_newsfeed_color"
            android:textStyle="bold"
            app:appFont="@string/font_helveticaneuebold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_Description01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="txt_Description01"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imv_new_bee"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/home_newbee_logo"
            android:scaleType="center" />

        <TextView
            android:id="@+id/txt_Description02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="txt_Description02"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imv_natus"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/home_navi_logo"
            android:scaleType="center" />

        <TextView
            android:id="@+id/txt_Description03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="txt_Description03fgfgfgfgfgfgfgfgfgfg"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>