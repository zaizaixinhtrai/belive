<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="35dp"
              android:layout_marginBottom="@dimen/chat_margin_bottom"
              android:layout_marginStart="@dimen/chat_margin_start"
              android:paddingStart="4dp"
              android:paddingEnd="11dp"
              android:gravity="center_vertical"
    android:background="@drawable/bg_red_radius">
    <com.appster.customview.CircleImageView
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/ic_live_shop"/>

    <com.appster.customview.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:appFont="@string/font_opensansbold"
        android:text="@string/chat_box_live_commerce_suggestion"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_arrow_white_thin"
        android:visibility="gone"/>
</LinearLayout>