<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nearby_height_user_image"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_textview_name_home"
        android:layout_alignParentBottom="true"
        android:gravity="center|left"
        android:orientation="horizontal">

        <com.appster.customview.CustomFontTextView
            android:id="@+id/tvDisplayName"
            android:textDirection="locale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center|left"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_newsfeed_color"
            android:textSize="13sp"
            android:textStyle="bold"
            app:appFont="@string/font_helveticaneuebold" />

        <com.appster.customview.CustomFontTextView
            android:id="@+id/txt_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginLeft="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="2dp"
            android:text="@string/km_default"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            app:appFont="@string/font_helveticaneuebold" />
    </LinearLayout>

</LinearLayout>