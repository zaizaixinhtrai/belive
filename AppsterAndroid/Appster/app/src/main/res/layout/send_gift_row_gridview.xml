<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/flGiftItemContainer"
    android:orientation="vertical"
    >

    <com.appster.customview.CustomFontTextView
        android:id="@+id/txt_bean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/refill_gem_icon"
        app:drawable_width="14dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="5dp"
        android:text="100"
        android:textSize="10sp"
        android:textColor="@color/profile_gift_text_color"
        app:appFont="@string/font_opensansregular"/>

    <com.appster.layout.SquareImageView
        android:id="@+id/imv_gird_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="6dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside" />

</FrameLayout>