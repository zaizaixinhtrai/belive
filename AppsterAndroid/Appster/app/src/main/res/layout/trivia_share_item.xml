<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/clickable_ripple"
              android:clickable="true"
              android:clipToPadding="false"
              android:orientation="vertical"
              android:paddingBottom="12dp"
              android:paddingTop="14dp">

    <com.appster.layout.SquareImageView
        android:id="@+id/ivCategoryImage"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_weight="1" />

    <com.appster.customview.CustomFontTextView
        android:id="@+id/tvCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingTop="8dp"
        android:textColor="@color/color_a500b7"
        android:textSize="9sp"
        app:appFont="@string/font_ralewaybold"
        tools:text="This is title" />
</LinearLayout>