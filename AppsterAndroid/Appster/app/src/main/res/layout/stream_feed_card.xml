<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/streamImageLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/user_info_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_newsfeed"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/userImage_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/newfeed_imv_user_background">

                <com.appster.customview.CircleImageView
                    android:id="@+id/streamUserImage"
                    android:layout_width="@dimen/newfeed_user_image"
                    android:layout_height="@dimen/newfeed_user_image"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/content_desc"
                    android:padding="2dp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <com.appster.customview.CustomFontTextView
                    android:id="@+id/streamUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="gfgfgfg"
                    android:textColor="@color/new_text_grey"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:appFont="@string/font_helveticaneuebold" />

                <TextView
                    android:id="@+id/date_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="gfgfgfg"
                    android:textColor="#A8A9AD"
                    android:textSize="11sp" />
            </LinearLayout>

            <com.appster.customview.CustomFontButton
                android:id="@+id/btn_follow"
                android:layout_width="@dimen/width_btn_follow"
                android:layout_height="@dimen/height_btn_follow"
                android:layout_marginRight="@dimen/margin_left_newsfeed"
                android:background="@drawable/background_btn_live"
                android:text="@string/newsfeed_btn_live"
                android:textColor="@color/text_newsfeed_color"
                android:textSize="13sp"
                android:textStyle="normal"
                app:appFont="@string/font_helveticaneuebold" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_info_view"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_newsfeed">

            <ImageView
                android:id="@+id/streamCoverImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_image_media"
                android:layout_gravity="center"
                android:minHeight="300dp"
                android:scaleType="fitXY" />

            <Button
                android:id="@+id/btn_live"
                android:layout_width="@dimen/width_button_live"
                android:layout_height="@dimen/height_button_live"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/home_btn_recorded"
                android:text="@string/newsfeed_btn_live"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_left_newsfeed"
        android:paddingRight="@dimen/margin_left_newsfeed"
        android:layout_marginTop="@dimen/margin_top_newsfeed"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_like_count"
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:background="@drawable/icon_viewers"
            android:contentDescription="@string/content_desc"
            android:scaleType="center" />

        <com.appster.customview.CustomFontTextView
            android:id="@+id/stream_watchers_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="12334 likes"
            android:layout_weight="1"
            android:textColor="@color/text_newsfeed_color"
            android:textStyle="bold"
            app:appFont="@string/font_helveticaneuebold" />

        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:src="@drawable/option_new_feed"
            android:scaleType="fitCenter"
            android:contentDescription="@string/content_desc"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_newsfeed"
        android:layout_marginTop="@dimen/margin_top_newsfeed"
        android:orientation="horizontal">

        <com.appster.customview.CustomFontTextView
            android:id="@+id/userNameDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hii"
            android:textColor="@color/new_text_grey"
            android:textSize="13sp"
            android:visibility="visible"
            app:appFont="@string/font_helveticaneuebold" />

        <TextView
            android:id="@+id/streamDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Cookie time ice bay"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/view_extra"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@android:color/transparent" />

</LinearLayout>