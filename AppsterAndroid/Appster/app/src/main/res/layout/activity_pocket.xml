<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/pocket_Current_Balance"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/rlt_beans"
        style="@style/pocket_linearlayout_style">

        <LinearLayout
            android:id="@+id/llSenderMessageContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pocket_Beans"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pocket_View_your_transaction_history"
                android:textSize="10sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imv_bean"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/txt_bean"
            android:background="@drawable/icon_gift_currency" />

        <TextView
            android:id="@+id/txt_bean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/imv_arrow"
            android:text=""
            android:textColor="#EC008D"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imv_arrow"
            style="@style/setting_image_stype" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt_usd"
        style="@style/pocket_linearlayout_style">

        <LinearLayout
            android:id="@+id/ll_usd_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pocket_USD"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pocket_View_your_transaction_history"
                android:textSize="10sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imv_gold"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/txt_usd"
            android:background="@drawable/image_gold" />

        <TextView
            android:id="@+id/txt_usd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/arrow"
            android:text=""
            android:textColor="#F7941D"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/arrow"
            style="@style/setting_image_stype" />

    </RelativeLayout>

</LinearLayout>