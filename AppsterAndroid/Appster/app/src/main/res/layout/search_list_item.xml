<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ownerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?android:selectableItemBackground"
    android:orientation="horizontal">

    <com.appster.customview.CircleImageView
        android:id="@+id/userImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="7dp" />

    <com.appster.customview.CustomFontTextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center|start"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@+id/userImage"
        android:gravity="center|start"
        android:maxLines="1"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:singleLine="true"
        android:textColor="#4D4D4D"
        android:textSize="18sp"
        app:appFont="@string/font_questrialregular"
        tools:text="Mary Stewart " />

    <Button
        android:id="@+id/btn_follow"
        android:layout_width="42.5dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="17dp"
        android:background="@drawable/btn_follow" />

</RelativeLayout>
