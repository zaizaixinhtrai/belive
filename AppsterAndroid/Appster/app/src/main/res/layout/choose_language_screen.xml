<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/height_icon_app"
        android:layout_height="76dp"
        android:layout_marginTop="@dimen/margin_top_iconapp"
        android:src="@drawable/img_logo" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/btn_eng"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/activity_choose_language_english"
            android:textColor="#92742C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btn_sng"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/activity_choose_language_sp"
            android:textColor="#92742C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btn_seng"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/activity_choose_language_zh"
            android:textColor="#92742C"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>