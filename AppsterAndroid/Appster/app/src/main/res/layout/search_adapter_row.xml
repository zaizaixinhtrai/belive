<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.appster.layout.SquareImageView
            android:id="@+id/userImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/imvLiveTag"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_gravity="start|bottom"
            android:layout_marginBottom="-2dp"
            android:background="@drawable/search_live_icon" />

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_gravity="start|bottom"
            android:layout_marginBottom="-2dp"
            android:gravity="center|start"
            android:orientation="horizontal">

            <View
                android:id="@+id/viewExtra"
                android:layout_width="31dp"
                android:layout_height="1dp" />

            <com.appster.customview.CustomFontTextView
                android:id="@+id/tvNumberView"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/search_view_bar"
                android:drawableStart="@drawable/search_view_bar_eye"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="3dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="9sp"
                app:appFont="@string/font_questrialregular"
                app:drawable_start_height="8dp"
                app:drawable_start_width="15dp"
                tool:text="90" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:id="@+id/llInfoContainer"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <com.appster.customview.CustomFontTextView
            android:id="@+id/tvTitleStream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start|center"
            android:singleLine="true"
            android:textColor="#4d4d4d"
            android:textSize="13sp"
            app:appFont="@string/font_questrialregular"
            tool:text="dfdfdfdf" />

        <com.appster.customview.CustomFontTextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="start|center"
            android:textColor="#4d4d4d"
            android:textSize="9sp"
            app:appFont="@string/font_questrialregular"
            tool:text="addddd" />
    </LinearLayout>

</LinearLayout>
