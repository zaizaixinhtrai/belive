<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       style="@style/giftRankingGroupViewStyle"
       tools:parentTag="LinearLayout"
       >
    <com.appster.customview.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="@string/today"
        android:textAllCaps="true"
        android:textSize="9sp"
        app:appFont="@string/font_helveticaneuelight"
        android:textColor="@color/white"/>

    <RelativeLayout
        android:id="@+id/rl_Rank_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible">

        <com.appster.customview.CircleImageView
            android:id="@+id/img_rank_1"
            tools:src="@drawable/user_image_default"
            style="@style/rankingAvatarStyle"/>

        <com.appster.customview.CustomFontTextView
            android:id="@+id/txt_display_name_rank_1"
            android:layout_toEndOf="@id/img_rank_1"
            style="@style/rankingUserNameStyle"
            tools:text="FineApp"/>

        <com.appster.customview.CustomFontTextView
            android:id="@+id/txt_stars_rank_1"
            android:layout_toEndOf="@id/img_rank_1"
            android:layout_below="@id/txt_display_name_rank_1"
            tools:text="100k"
            style="@style/rankingStarsStyle"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_Rank_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:visibility="gone"
        tools:visibility="visible">
        <com.appster.customview.CircleImageView
            android:id="@+id/img_rank_2"
            tools:src="@drawable/user_image_default"
            style="@style/rankingAvatarStyle"/>

        <com.appster.customview.CustomFontTextView
            android:id="@+id/txt_display_name_rank_2"
            android:layout_toEndOf="@id/img_rank_2"
            tools:text="FineApp"
            style="@style/rankingUserNameStyle"/>

        <com.appster.customview.CustomFontTextView
            android:id="@+id/txt_stars_rank_2"
            android:layout_toEndOf="@id/img_rank_2"
            android:layout_below="@id/txt_display_name_rank_2"
            tools:text="100k"
            style="@style/rankingStarsStyle"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_Rank_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:visibility="gone"
        tools:visibility="visible">
        <com.appster.customview.CircleImageView
            android:id="@+id/img_rank_3"
            tools:src="@drawable/user_image_default"
            style="@style/rankingAvatarStyle"/>

        <com.appster.customview.CustomFontTextView
            android:id="@+id/txt_display_name_rank_3"
            android:layout_toEndOf="@id/img_rank_3"
            tools:text="FineApp"
            style="@style/rankingUserNameStyle"/>

        <com.appster.customview.CustomFontTextView
            android:id="@+id/txt_stars_rank_3"
            android:layout_toEndOf="@id/img_rank_3"
            android:layout_below="@id/txt_display_name_rank_3"
            tools:text="100k"
            style="@style/rankingStarsStyle"/>
    </RelativeLayout>

</merge>