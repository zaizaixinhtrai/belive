<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    tools:background="#c4c2c2"
    >

    <com.appster.customview.CircleImageView
        android:id="@+id/imgAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        tools:src="@drawable/user_image_default"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgAvatar"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <com.appster.customview.CustomFontTextView
                android:id="@+id/txtDisplayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/color_display_name"
                tools:text="display name"
                app:appFont="@string/font_opensansbold"/>

            <com.appster.customview.CustomFontTextView
                android:id="@+id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="\@username"
                android:textSize="12sp"
                app:appFont="@string/font_opensanssemibold"/>
        </LinearLayout>

</RelativeLayout>
