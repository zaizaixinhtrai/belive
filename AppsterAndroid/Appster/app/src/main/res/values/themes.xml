<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/belive_default_background</item>
    </style>

    <style name="Theme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/belive_default_background</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="themedToolbarDrawable">@color/transparent</item>
        <item name="themedToolbarMenuIconDrawable">@drawable/ic_toolbar_menu</item>
        <item name="themedToolbarNotificationIconDrawable">@drawable/ic_toolbar_notification</item>
        <item name="themedToolbarLogoDrawable">@drawable/topbar_belive_logo</item>
        <item name="themedLiveTagDrawable">@drawable/mini_live_tag</item>
        <item name="themedRecordedTagDrawable">@drawable/home_btn_recorded</item>
        <item name="themedLiveCategoryDrawable">@drawable/bg_category_tag</item>
        <item name="themedLiveGradientDrawable">@drawable/home_gradient_tag</item>
        <item name="themedLiveCategoryLongDrawable">@drawable/bg_category_tag</item>
        <item name="themedNavCenterDrawable">@drawable/ic_actionbar</item>
        <item name="themedLiveTitleTextColor">@color/color_777777</item>
        <item name="themedTabDefaultTextColor">@color/text_color_on_tapbar</item>
        <item name="themedTabSelectedTextColor">@color/text_color_selected_on_tapbar</item>
        <item name="themedTabIndicatorColor">@color/color_f05c56</item>
        <item name="themedToolbarTitleStyle">@style/header_title</item>
        <item name="themedToolbarHeight">@dimen/height_top_bar</item>
        <item name="themedToolbarBackIconDrawable">@drawable/icon_back_btn_white</item>
        <item name="themedProfileAppBarCustomWindow">true</item>
        <item name="themedNavProfileHeaderHeight">@dimen/nav_header_height</item>
        <item name="themedToolbarPaddingTop">@dimen/status_bar_height</item>
        <item name="themedShopButtonBackground">@drawable/selector_red_button_radius_end</item>
        <item name="themedShopButtonTextStyle">@style/clickable_ripple</item>
        <item name="themedShopButtonContainerBackground">@drawable/border_radius_red</item>
        <item name="themedShopPromoteTextColor">@color/color_ff5167</item>
        <item name="themedLiveTitleTextFont">@string/font_helveticaneuelight</item>
        <item name="themedTransactionHistoryTextStyle">@style/header_transaction_style</item>
        <item name="themedKeyboardAvailableScreenStyle">@style/keyboardScreenStyle</item>
    </style>

    <style name="AppTheme.Xmas" parent="AppTheme">
        <item name="themedToolbarDrawable">@drawable/background_top_bar_xmas</item>
        <item name="themedToolbarMenuIconDrawable">@drawable/menu_icon_xmas</item>
        <item name="themedToolbarNotificationIconDrawable">@drawable/btn_notification_xmas</item>
        <item name="themedToolbarLogoDrawable">@drawable/topbar_belive_logo_xmas</item>
        <item name="themedLiveCategoryDrawable">@drawable/bg_category_tag_xmas</item>
        <item name="themedLiveCategoryLongDrawable">@drawable/bg_category_tag_xmas_long</item>
        <item name="themedNavCenterDrawable">@drawable/ic_actionbar_xmas</item>
        <item name="themedLiveTitleTextColor">@color/color_005bbc</item>
        <item name="themedTabSelectedTextColor">@color/color_005bbc</item>
        <item name="themedTabIndicatorColor">@color/color_f17ba0</item>
        <item name="themedToolbarTitleStyle">@style/header_title.xmas</item>
        <item name="themedTransactionHistoryTextStyle">@style/header_transaction_style.xmas</item>
        <item name="themedToolbarHeight">@dimen/height_top_bar_xmas</item>
        <item name="themedToolbarBackIconDrawable">@drawable/icon_back_btn_white_xmas</item>
        <item name="themedProfileAppBarCustomWindow">false</item>
        <item name="themedNavProfileHeaderHeight">@dimen/nav_header_height_xmas</item>
        <item name="themedToolbarPaddingTop">@dimen/status_bar_height_xmas</item>
        <item name="themedLiveGradientDrawable">@drawable/home_gradient_tag</item>
        <item name="themedLiveTagDrawable">@drawable/ic_home_btn_live_xmas</item>
        <item name="themedRecordedTagDrawable">@drawable/ic_home_btn_recorded_xmas</item>
        <item name="themedShopButtonBackground">@drawable/background_top_bar_xmas</item>
        <item name="themedShopButtonTextStyle">@style/clickable_ripple_xmas</item>
        <item name="themedShopButtonContainerBackground">@drawable/border_radius_xmas</item>
        <item name="themedShopPromoteTextColor">@color/color_005bbc</item>
        <item name="themedLiveTitleTextFont">@string/font_helveticaneuelight</item>
        <item name="themedKeyboardAvailableScreenStyle">@style/keyboardScreenStyle.xmas</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="AppTheme.NoActionBar.Fullscreen.Xmas" parent="AppTheme.Xmas">
        <item name="android:windowFullscreen">true</item>
    </style>
    <color name="color_005bbc">#005bbc</color>
    <color name="color_f17ba0">#f17ba0</color>
</resources>
